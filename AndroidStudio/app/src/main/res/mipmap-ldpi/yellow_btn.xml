<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#CFB53B" />
         <gradient android:angle="-90" android:startColor="#FFD700" android:endColor="#D4AF37"  />            
     </shape>
 </item>
<item android:state_focused="false">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#FFD700" />
         <solid android:color="#FFD700"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#CFB53B" />
         <gradient android:angle="-90" android:startColor="#CFB53B" android:endColor="#D4AF37"  />            
     </shape>
 </item>
</selector>
